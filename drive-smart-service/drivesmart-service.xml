<service>
  <!-- ID of the service. It should be unique across the Windows system-->
  <id>drivesmart-service</id>
  
  <!-- Display name of the service -->
  <name>DriveSmart Backend Service</name>
  
  <!-- Service description -->
  <description>Spring Boot Service for DriveSmart - Haydovchilik test platformasi</description>
  
  <!-- Path to the executable, which should be started -->
  <executable>C:\Program Files\Java\jdk-21\bin\java.exe</executable>
  <arguments>-jar "%BASE%\drivesmart-backend-1.0.0.jar" --spring.profiles.active=production</arguments>
  
  <!-- Working directory -->
  <workingdirectory>%BASE%</workingdirectory>
  
  <!-- Optional: log configuration -->
  <logpath>%BASE%\logs</logpath>
  <log mode="roll-by-size">
    <sizeThreshold>10240</sizeThreshold>
    <keepFiles>10</keepFiles>
  </log>
  
  <!-- Service start mode -->
  <startmode>Automatic</startmode>
  
  <!-- Service recovery options -->
  <onfailure action="restart" delay="10 sec"/>
  <onfailure action="restart" delay="20 sec"/>
  <onfailure action="restart" delay="60 sec"/>
</service>